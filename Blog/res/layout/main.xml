<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >
		<TextView	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5px"
			android:text="@string/HeadingLabel" />
		<EditText android:id="@+id/HeadingEditText"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >
		<TextView	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5px"
			android:text="@string/MainBodyLabel" />
	</LinearLayout>
	<EditText android:id="@+id/MainBodyEditText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<Button android:id="@+id/CameraButton"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/CameraButtonText" />
	<Button android:id="@+id/SendButton"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/SendButtonText" />
	<com.vgsoftware.android.blog.ui.CameraView android:id="@+id/CameraControl2"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" />
</LinearLayout>
